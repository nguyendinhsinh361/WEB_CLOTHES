<!-- Include header-->
<%-include('include/_header')%>
<!-- /Include header-->

    <!-- Breadcrumb Begin -->
    <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="/"><i class="fa fa-home"></i> Home</a>
                        <span>Update Product</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Contact Section Begin -->
    <section class="contact spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="contact__content">
                        <div class="contact__address">
                            <h5>Enter information your product</h5>
                        </div>
                        <div class="contact__form">
                            <h5>Form Detail</h5>
                            <form action="/shop/shopAdmin/<%= product._id %>?_method=put" method="POST" enctype="multipart/form-data">
                                <input type="hidden" name="_method" value="put">
                                <div>
                                    <label for="title">Title</label>
                                    <input type="text" placeholder="Title" name="title" value="<%= product.title %>">
                                </div>
                                <div>
                                    <label for="cost">Cost</label>
                                    <input type="number" placeholder="Cost" name="cost" value="<%= product.cost %>">
                                </div>
                                <div>
                                    <label for="sex">Sex</label>
                                    <select name="sex" id="sex" value="<%= product.sex %>">
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                                <div>
                                    <label for="status">Status</label>
                                    <select name="status" id="status" value="<%= product.status %>">
                                        <option value="new">NEW</option>
                                        <option value="stockout">OUT-STOCK</option>
                                        <option value="stockblue">STOCK-BLUE</option>
                                        <option value="sale">SALE</option>
                                    </select>
                                </div>
                                <div>
                                    <label for="category">Category</label>
                                    <select name="category" id="category" value="<%= product.category %>">
                                        <option value="women">Women</option>
                                        <option value="men">Men</option>
                                        <option value="kid">Kid</option>
                                        <option value="accessories">Accessories</option>
                                        <option value="cosmetic">Cosmetic</option>
                                    </select>
                                </div>
                                <div>
                                    <label for="description">Description</label>
                                    <textarea placeholder="Description" name="description"><%= product.description %></textarea>
                                </div>
                                <div>
                                    <label for="img">Upload Image</label>
                                    <input type="file" id="img" name="img" value="<%= product.image %>" required />
                                </div>
                                <button type="submit" class="site-btn">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="contact__map">
                        <img src="/img/form-v7.jpg" alt="" style="border: 1px; ">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->

<!-- Include footer-->
<%-include('include/_footer')%>
<!-- /Include footer-->